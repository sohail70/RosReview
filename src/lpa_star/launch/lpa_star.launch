<launch>
    <!-- Gazebo world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find lpa_star)/include/worlds/animated_box.world"/>
    </include>
    
    <!-- Spawn tb3 as urdf : converting xacro to urdf(xacro has an easier syntax but in the end we must use urdf) -->
    <param name="robot_description" command="$(find xacro)/xacro '$(find lpa_star)/launch/dep/urdf/turtlebot3_waffle.urdf.xacro'"/>
    <node pkg = "gazebo_ros" type="spawn_model" name="spawn_model" args="-model tb3 -urdf -param robot_description -x 0.0 -y 0.0 -z 0.0"/>

    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher"/>


    <!-- map server -->
    <node pkg="map_server" type="map_server" name="map_server" args="$(find lpa_star)/map/box_static.yaml"/>

    <!-- AMCL -->
    <node pkg="amcl" type="amcl" name="amcl">
        <remap from="scan" to="base_scan"/>
    </node>

    <!-- Global costmap -->
    <node pkg="costmap_2d" type="costmap_2d_node" name="global_costmap">
        <rosparam file="$(find lpa_star)/config/global_costmap.yaml" command="load" ns="costmap"/>
    </node> 
    <!-- Local costmap -->
    <node pkg="costmap_2d" type="costmap_2d_node" name="local_costmap">
        <rosparam file="$(find lpa_star)/config/local_costmap.yaml" command="load" ns="costmap"/>
    </node> 

    <!-- LPA STAR -->
    <node pkg="lpa_star" type="lpa_star" name="lpa_star">
        <remap from="lpa_star/global_costmap/costmap/costmap" to="global_costmap/costmap/costmap"/>
        <!-- <remap from="lpa_star/global_costmap/costmap/costmap_updates" to="global_costmap/costmap/costmap_updates"/> -->
        <!-- <remap from="lpa_star/global_costmap/costmap/footprint" to="global_costmap/costmap/footprint"/> -->
        <!-- <remap from="lpa_star/global_costmap/costmap/inflation_layer/parameter_descriptions" to="global_costmap/costmap/inflation/parameter_descriptions"/> -->
        <!-- <remap from="lpa_star/global_costmap/costmap/inflation_layer/parameter_updates" to="global_costmap/costmap/inflation/parameter_updates"/> -->
        <!-- <remap from="lpa_star/global_costmap/costmap/obstacle_layer/parameter_descriptions" to="global_costmap/costmap/obstacle/parameter_descriptions"/> -->
        <!-- <remap from="lpa_star/global_costmap/costmap/obstacle_layer/parameter_updates" to="global_costmap/costmap/obstacle/parameter_updates"/> -->
        <!-- <remap from="lpa_star/global_costmap/costmap/parameter_descriptions" to="global_costmap/costmap/parameter_descriptions"/> -->
        <!-- <remap from="lpa_star/global_costmap/costmap/parameter_updates" to="global_costmap/costmap/parameter_updates"/> -->
        <rosparam file="$(find lpa_star)/config/global_costmap.yaml" command="load"/>
    </node>
</launch>